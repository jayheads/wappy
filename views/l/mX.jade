mixin j(j)
    script.
        #{j}

mixin s(a)
    script(src="/#{a}.js")

mixin S(a)
    - each b in a
        +s(b)
mixin css(a)
    link(rel="stylesheet",href="/#{a}.css")

mixin v(i,v)
    script.
        #{i}="#{v}"

mixin fl()
    if ms
        if ms.length>0
            h2.alert.alert-danger
                each m in ms
                    p &nbsp #{m}

 mixin btnG(a,b,c)
    - b=b||a;
    if c=='green'
        .btn-group: a.btn.btn-success.btn-lg(data-toggle="modal",href="#"+a) #{b}
    else
        .btn-group: a.btn.btn-primary.btn-lg(data-toggle="modal",href="#"+a) #{b}


mixin li
    .btn-toolbar
        +btnG('signUp','Sign Up!','green')
        +btnG('login','Login!')



mixin sm
    input(type='submit',value='submit')


mixin uI
    form(action="/upload",method="post",enctype="multipart/form-data")
        input(type="file",name="i")
        mixin sm


mixin bts(bA)
    each b in bA
        button(id='#{b}') #{b}



mixin bff
    br
