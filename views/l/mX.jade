mixin i(s,w,h)
    - w=w||200;h=h||200
    img(src="#{s}",width="#{w}",height="#{h}")

mixin mf
    script.
        mf=#{mf}

mixin p
    script.
        p=#{p}



mixin C(n,w,h,r,l)
    - n=n||'can';w=w||960;h=h||450;r=r||'blue';
    if r
        canvas(id="#{n}",class="#{l}",width="#{w}",height="#{h}",style="background-color:#{r}")
    else
        canvas(id="#{n}",class="#{l}",width="#{w}",height="#{h}")
    script.
        C("#{n}")


mixin tn(i)
    .col-xs-3
        .thumbnail
            a.btn.btn-mini(href='/pics/del/#{i}') x
            a.btn.btn-mini(href='/transform/#{i}') edit
            a.btn.btn-mini(href='/set/#{i}') set
            img(src="/"+i)
            br

mixin tnT(i)
    .col-xs-2
        a.thumbnail(href='/transform/#{i}')
            img(src='/'+i)
        br

mixin btD(i,t)
    a(id='#{i}').btn.btn-danger #{t}



