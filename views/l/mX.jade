    br

mixin chatter
    #chat
    input#mit
    button#sub





mixin w(s,t)
    h4 Welcome to #{s}!
    h5 ..a place to #{t}



mixin tin(n)
    input(type='text',name='#{n}')
mixin mit(n)
    inputmit(type='text',name='#{n}')
mixin bin(v)
    button(type="submit") #{v||'submit'}
mixin sub(v)
    button.sub(type="submit") #{v||'submit'}
mixin hin(n,v)
    input(type="hidden",name="#{n}",value="#{v}")
mixin rin(n,I)
    each i in I
        input(type="radio",name="#{n}",value="#{i}")
        span &nbsp&nbsp#{i}&nbsp&nbsp
mixin rin2(n,I)
    each i in I
        span &nbsp&nbsp#{i}&nbsp&nbsp
        input(type="radio",name="#{n}",value="#{i}")
mixin chin(I)
    each i in I
        span &nbsp&nbsp#{i}&nbsp&nbsp
        input(type="checkbox", name="#{i}")



mixin iF
    form.well(method=false, action=false)
        +mit(a)
        +bin



mixin buts(bA,po,pre,po2)
    if pre
        br
    each b in bA
        button(id='#{b}') #{b}
        if po
            br
        if po2
            br
